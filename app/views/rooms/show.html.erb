<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<!--<p id="notice"><%= notice %></p>-->

<h1 style="color:#cdbfe3">Apartment Information</h1>
<table class="table table-striped" width="500" >
<tbody>
<tr>
  <td><strong>Latitude:</strong></td>
  <td><%= @room.latitude %></td>
</tr>
</tbody>
<tr>
  <td><strong>Longitude:</strong></td>
  <td><%= @room.longitude %></td>
</tr>

<tr>
  <td><strong>Address:</strong></td>
  <td><%= @room.address %></td>
</tr>

<tr>
  <td><strong>Rent:</strong></td>
  <td><%= @room.rent %></td>
</tr>

<tr>
  <td><strong>Utility Fees:</strong></td>
  <td><%= @room.util_fee %></td>
</tr>

<tr>
  <td><strong>Quantity of Room:</strong></td>
  <td><%= @room.apt_roomnum %></td>
</tr>

<tr>
  <td><strong>Quantity of Bathroom:</strong></td>
  <td><%= @room.apt_bathnum %></td>
</tr>

<tr>
  <td><strong>Roommate gender:</strong></td>
  <td><%= @room.apt_gender %></td>
</tr>

<tr>
  <td><strong>University</strong></td>
  <td>
  <% @universities.each do |university|%>
     <% if university.univ_id == @room.univ_id %>
  		<%= university.univ_name %>
  <%end%>
  <%end%>
</td>
</tr>

<tr>
  <td><strong>Distance from U:</strong></td>
  <td><%= @room.acpt_distance %></td>
</tr>

<tr>
  <td><strong>Commons:</strong></td>
  <td><%= @room.desc %></td>
</tr>
</tbody>
</table>

<p><strong>Picture:</strong></p>
<%if @room.image_url.to_s == ""%>
<p>There is no picture for this apartment.</p>
<%else%>
<div style='width: 600px; height: 300px;'>
<%= image_tag @room.image_url %>
</div>
<%end%>



<p><strong>Mark on Map:</strong></p>

<div style='width: 600px;'>
  <div id="map" style='width: 600px; height: 300px;'></div>
</div>
<p></p>
<%= link_to 'Back', rooms_path,class:"btn btn-sm btn-info" %>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(15);
});
</script>
